# Copy to .env and fill in values. Never commit .env.

# ── Database (required) ───────────────────────────────────────
# Local Postgres on Boomer:
DATABASE_URL=postgresql://emtesseract@localhost:5432/emtesseract_ops

# If pg_hba requires password auth, set PGPASSWORD (used by psql during migrate):
# PGPASSWORD=your-postgres-password

# Supabase (alternative):
# DATABASE_URL=postgresql://postgres.[REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres

# ── Ollama (MVP: local LLM on Boomer) ───────────────────────
# When running ON Boomer (same machine as Ollama):
OLLAMA_BASE_URL=http://localhost:11434

# When running elsewhere (point to Boomer):
# OLLAMA_BASE_URL=http://boomer:11434
# OLLAMA_BASE_URL=http://192.168.1.x:11434

OLLAMA_MODEL=llama3.2

# ── Workers (optional) ───────────────────────────────────────
WORKER_ID=step-worker-1
POLL_INTERVAL_MS=15000
