{
  "name": "emtesseract.com",
  "private": true,
  "scripts": {
    "build": "true",
    "deploy": "npx wrangler deploy",
    "preview": "npx wrangler dev",
    "lint": "npm run lint:md && npm run lint:css",
    "lint:md": "markdownlint --ignore node_modules \"**/*.md\"",
    "lint:css": "stylelint \"**/*.css\"",
    "test": "npm run test:html && npm run test:unit",
    "test:html": "html-validate index.html 404.html",
    "test:unit": "node --test tests/unit/*.test.mjs",
    "test:integration": "node --test tests/integration/db.test.mjs tests/integration/proposal-service.test.mjs",
    "test:all": "npm run test && npm run test:integration",
    "migrate": "bash migrations/migrate.sh",
    "api": "node api/server.mjs",
    "setup-postgres": "bash scripts/setup-postgres.sh",
    "seed": "bash scripts/seed.sh"
  },
  "devDependencies": {
    "html-validate": "^8",
    "markdownlint-cli": "^0.38",
    "stylelint": "^16",
    "stylelint-config-standard": "^36",
    "wrangler": "^4"
  },
  "dependencies": {
    "pg": "^8"
  }
}