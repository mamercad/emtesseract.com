[Unit]
Description=emTesseract heartbeat
After=network.target postgresql.service

[Service]
Type=simple
User=@USER@
WorkingDirectory=@PROJECT_ROOT@
EnvironmentFile=@PROJECT_ROOT@/.env
ExecStart=/usr/bin/env node workers/heartbeat.mjs
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
